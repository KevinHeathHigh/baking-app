<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_gravity="left|start">

    <TextView
        android:id="@+id/widget_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ingredient_text_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="#ffffff"
        tools:text="@string/sample_quantity" />

    <TextView
        android:id="@+id/widget_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ingredient_text_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="#ffffff"
        tools:text="@string/sample_measure" />

    <TextView
        android:id="@+id/widget_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ingredient_text_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="#ffffff"
        tools:text="@string/sample_ingredient" />
</LinearLayout>
